<!DOCTYPE html>
<html>
  <head>
    <title>Brainspace</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_merchant %>
        Signed in as <%= current_merchant.email %> | <%= link_to 'Dashboard', "#{site_root_url}" %>
        <br>
        <%= link_to 'Logout', "#{site_root_url}/merchant/logout" %>
    <% else %>
        <%= link_to 'Login', "#{site_root_url}/merchant/login" %> | <%= link_to 'Signup', "#{site_root_url}/merchant/signup" %>
    <% end %>

    <%= yield %>
  </body>
</html>
