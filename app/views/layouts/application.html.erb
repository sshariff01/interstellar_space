<!DOCTYPE html>
<html>
  <head>
    <title>Brainspace</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_merchant %>
        Signed in as <%= current_merchant.email %> | <%= link_to 'Dashboard', "#{merchant_root_url}" %>
        <br>
        <%= link_to 'Logout', merchant_logout_url, id: 'logout' %>
    <% else %>
        <%= link_to 'Login', login_merchant_url, id: 'login' %> | <%= link_to 'Signup', signup_merchant_url, id: 'signup' %>
    <% end %>

    <%= yield %>
  </body>
</html>
